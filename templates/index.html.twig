{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="body">

        {% include 'top.html.twig' %}
        
        <h1>Home!</h1>

        {% if data %}
            <h3>{{ total_price|number_format(2) ~ ' USD'}}</h3>
            <table class="border">
                <thead>
                    <tr>
                        <th>{{ 'Label' }}</th>
                        <th>{{ 'Value' }}</th>
                        <th>{{ 'Currency' }}</th>
                        <th>{{ 'Price' }}</th>
                        <th>{{ 'Update' }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for key, value in data %}
                    <tr>
                        <td>{{ value.label }}</td>
                        <td>{{ value.value|number_format(2) }}</td>
                        <td>{{ value.symbol }}</td>
                        <td>{{ value.cost_usd|number_format(2) }}</td>
                        <td><a href={{"/update/" ~ value.asset_id}}><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="right-arrow"><path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z"></path></svg></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}

        <a href="{{ path('create_asset') }}"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 250 250" id="add-new"><path d="M12,2A10,10,0,1,0,22,12,10,10,0,0,0,12,2Zm0,18a8,8,0,1,1,8-8A8,8,0,0,1,12,20Zm4-9H13V8a1,1,0,0,0-2,0v3H8a1,1,0,0,0,0,2h3v3a1,1,0,0,0,2,0V13h3a1,1,0,0,0,0-2Z"></path></svg></a>
    </div>

{% endblock %}
